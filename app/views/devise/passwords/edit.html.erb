<div class="overflow-hidden w-screen h-screen relative">
  <div class="login-moving-background absolute top-0 left-0 bg-gray"></div>
</div>

<div class="flex flex-col items-center justify-center absolute top-0 left-0 w-full h-full">
  <div class="login-window w-96 px-6 py-16 shadow-xl bg-white">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
  
      <div class="field my-3">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full my-2" %>
      </div>
  
      <div class="field my-3">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full my-2" %>
      </div>
  
      <div class="actions">
        <%= f.submit "Change my password", class: "block my-3 w-full h-20 bg-neutral-500 text-white transition-all duration-300 hover:bg-amber-500 hover:cursor-pointer" %>
      </div>
    <% end %>
  
    <%= render "devise/shared/links" %>
  </div>
</div>
